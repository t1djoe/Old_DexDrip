<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.eveningoutpost.dexdrip.Home">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context="com.eveningoutpost.dexdrip.AddTreatment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Add Treatment"
        android:layout_centerHorizontal="true"/>
        
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Glucose Reading: "
        android:layout_marginTop="41dp" /> 
        
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/bg_value"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:hint="Enter BG Value"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
    </LinearLayout>
    
    <RadioGroup
        android:id="@+id/radioMeasMethod"
        android:layout_marginTop="81dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/insulin_units"
            android:text="Meter"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioSensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/insulin_units"
            android:text="Sensor" />

    </RadioGroup>
        
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Carbs Given: "
        android:layout_marginTop="101dp"/> 
        
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/carb_grams"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:hint="Enter Carbs in Grams"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp" />
    </LinearLayout>
    
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Insulin Given: "
        android:layout_marginTop="141dp"/> 
            
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/insulin_units"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:hint="Enter Insulin in Units"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp" />
    </LinearLayout>

    
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Eating In: "
        android:layout_marginTop="221dp"/> 
          
    <Spinner
        android:id="@+id/eating_time_spinner"
        android:layout_marginTop="221dp"
        android:layout_alignStart="@+id/insulin_units"
        android:layout_alignEnd="@+id/insulin_units"
        android:entries="@array/eating_time_array"
        android:prompt="@string/sel_eating_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Additional Notes, Comments:"
        android:layout_marginTop="261dp"/> 
   
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/notes"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="281dp" />  
    
    <LinearLayout
    android:orientation="horizontal" 
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content">
        
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Entered By: "
        android:layout_marginTop="341dp"/> 
            
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/entered_by"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="341dp" />
    </LinearLayout>
        
    <RadioGroup
        android:id="@+id/radioTime"
        android:layout_marginTop="401dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/insulin_units"
            android:text="Now"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/insulin_units"
            android:text="Other" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/event_time"
        android:autoText="false"
        android:text=""
        android:singleLine="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:hint="Event time hh:mm  "
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="441dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/save_treatment_button"
        android:layout_below="@+id/bg_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="481dp" />

</RelativeLayout>
<fragment android:id="@+id/navigation_drawer"
android:layout_width="@dimen/navigation_drawer_width" android:layout_height="match_parent"
android:layout_gravity="start"
android:name="com.eveningoutpost.dexdrip.NavigationDrawerFragment"
tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>

